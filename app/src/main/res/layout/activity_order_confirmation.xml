<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tvConfirmationMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank you for your order!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:paddingBottom="16dp" />

    <TextView
        android:id="@+id/tvPaymentMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Method: ..."
        android:textSize="16sp"
        android:textColor="#555555"
        android:paddingBottom="24dp" />

    <TextView
        android:id="@+id/tvTotalAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: RM"
        android:textSize="18sp"
        android:textColor="#555555"
        android:paddingBottom="24dp" />

    <ListView
        android:id="@+id/orderConfirmationListView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

    <Button
        android:id="@+id/btnTrackOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track Order"
        android:layout_marginTop="16dp"
        android:backgroundTint="#B388FF"/>

    <Button
        android:id="@+id/btnGoToMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Menu"
        android:layout_marginTop="16dp"
        android:backgroundTint="#B388FF"/>

    <Button
        android:id="@+id/btnGoToHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Home"
        android:layout_marginTop="16dp"
        android:backgroundTint="#B388FF"/>
</LinearLayout>
